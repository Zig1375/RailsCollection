<div class="page-header">
    <%= link_to 'Back', collection_requests_path(@collection), class: "btn btn-default pull-right" %>

    <h1>
        <%= @collection.title %>
    </h1>
</div>

<%= form_with scope: :request, url: collection_request_path(@collection, @request), local: true do |form| %>
    <% if @request.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <h4>
                <%= pluralize(@request.errors.count, "error") %> prohibited
                this collection from being saved:
            </h4>
            <ul>
                <% @request.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div style="width: 600px; margin: 15px auto;">
        <div class="form-group">
            <%= form.label :name, 'Name' %><br>
            <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :email, 'E-Mail' %><br>
            <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :message %><br>
            <%= form.text_area :message, readonly: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :state, "Status" %><br>
            <%= form.select(:state, Request.states.keys, {}, { :class => 'form-control' }) %>
        </div>

        <p>
            <%= form.submit 'Update', class: "btn btn-success" %>
        </p>
    </div>
<% end %>

<div class="alert alert-warning">
    Labels for exchange: <b><%= @request.items.count %></b>
</div>

<div class="items" id="cart-items-list">
    <% @request.items.each do |item| %>
        <%= render :partial => "items/item", :locals => {
            :item => item,
            :swap => @request,
            :state => 'new'
        } %>
    <% end %>
</div>